    <children>
        <Label alignment="CENTER" prefHeight="53.0" prefWidth="460.0" text="User profile">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <VBox>
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="600.0" spacing="5.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="131.0" text="First name" />
                        <TextField fx:id="tfFirstname" prefHeight="25.0" prefWidth="262.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="600.0" spacing="5.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="131.0" text="Last name" />
                        <TextField fx:id="tfLastname" prefHeight="25.0" prefWidth="262.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="600.0" spacing="5.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="131.0" text="Username" />
                        <TextField fx:id="tfUsername" prefHeight="25.0" prefWidth="262.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="600.0" spacing="5.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="131.0" text="Password" />
                        <PasswordField fx:id="pfPassword" prefHeight="25.0" prefWidth="262.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="600.0" spacing="5.0">
