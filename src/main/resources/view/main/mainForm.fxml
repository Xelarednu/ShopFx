<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbMainFormRoot" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.shopfx.controller.MainFormController">
   <children>
      <Label fx:id="lbInfo" alignment="CENTER" prefHeight="17.0" prefWidth="639.0" textFill="#5e9a50" />
      <TableView fx:id="tvListBooks" prefHeight="426.0" prefWidth="600.0">
         <columns>
            <TableColumn fx:id="tcId" prefWidth="47.0" text="Id" />
            <TableColumn fx:id="tcName" prefWidth="193.99998474121094" text="GPU Name" />
            <TableColumn fx:id="tcManufacturer" prefWidth="83.66665649414062" text="Manufacturer" />
            <TableColumn fx:id="tcMemorySize" prefWidth="92.66665649414062" text="Memory size" />
            <TableColumn fx:id="tcReleaseYear" prefWidth="92.66665649414062" text="Release year" />
            <TableColumn fx:id="tcPrice" prefWidth="90.0" text="Price" />
            <TableColumn fx:id="tcQuantity" prefWidth="90.0" text="Quantity" />
         </columns>
      </TableView>
      <HBox fx:id="hbEditBook" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="600.0" visible="false">
         <children>
            <Button mnemonicParsing="false" onAction="#showEditGpuForm" text="Edit gpu data" />
         </children>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </HBox>
   </children>
